    "version": "0.2.0",
    "configurations": [
        {
            
            "name": "Python Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "host.docker.internal",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "/app"
                }
            ],
            "preLaunchTask": "npm run debug",
            "postDebugTask": "npm run stop"
        },
        {
            
            "name": "Python Direct Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "host.docker.internal",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "/app"
                }
            ]
        }
    ]
}