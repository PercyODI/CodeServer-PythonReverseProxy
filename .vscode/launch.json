    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker: Python - Flask",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}/",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "flask"
            }
        },
        {
            "name": "Docker Run",
            "request": "attach",
            "type": "docker",
            "preLaunchTask": "npm run debug",
            "containerName": "PyRevProx",
            "platform": "netCore"
        },
        {
            
            "name": "Python Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "host.docker.internal",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "/app"
                }
            ],
            "preLaunchTask": "npm run debug",
            "postDebugTask": "npm run stop"
        },
        {
            
            "name": "Python Direct Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "host.docker.internal",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "/app"
                }
            ]
        }
    ]
}